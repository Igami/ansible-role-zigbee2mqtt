# Home Assistant integration (MQTT discovery)
homeassistant: {{ zigbee_homeassistant }}

# allow new devices to join
permit_join: {{ zigbee_permit_join }}

# MQTT settings
mqtt:
  # MQTT base topic for zigbee2mqtt MQTT messages
  base_topic: {{ zigbee_mqtt_base_topic }}
  # MQTT server URL
  server: '{{ zigbee_mqtt_server }}'
  # MQTT server authentication, uncomment if required:
{% if zigbee_mqtt_user is defined and zigbee_mqtt_password is defined %}
  user: {{ zigbee_mqtt_user }}
  password: {{ zigbee_mqtt_password }}
{% else %}
  # user: my_user
  # password: my_password
{% endif %}

advanced:
  network_key: {{ zigbee_network_key }}

# Serial settings
serial:
  # Location of CC2531 USB sniffer
  port: {{ zigbee_serial_port }}